            ],
            "@avans-nx-expedition/backend/features": [
                "libs/backend/features/src/index.ts"
            ],
            "@avans-nx-expedition/backend/neo4j": [
                "libs/backend/neo4j/src/index.ts"
            ],
            "@avans-nx-expedition/backend/shared": [
                "libs/backend/shared/src/index.ts"
            ],

            "@avans-nx-expedition/backend/user": [
                "libs/backend/user/src/index.ts"
            ],
            "@avans-nx-expedition/backend/expedition": [
                "libs/backend/expedition/src/index.ts"
            ],
            "@avans-nx-expedition/common": [
                "libs/frontend/common/src/index.ts"
            ],
            "@avans-nx-expedition/features": [
                "libs/frontend/features/src/index.ts"
