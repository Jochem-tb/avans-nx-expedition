            "@avans-nx-expedition/share-a-meal/features": [
                "libs/share-a-meal/features/src/index.ts"
            ],
            "@avans-nx-expedition/share-a-meal/ui": [
                "libs/share-a-meal/ui/src/index.ts"
            ],
            "@avans-nx-expedition/share-a-meal/user": [
                "libs/share-a-meal/user/src/index.ts"
            ],
            "@avans-nx-expedition/shared/api": ["libs/shared/api/src/index.ts"],
            "@avans-nx-expedition/shared/util-env": [
                "libs/shared/util-env/src/index.ts"
            ],
            "@avans-nx-expedition/ui": ["libs/frontend/ui/src/index.ts"]
        }
